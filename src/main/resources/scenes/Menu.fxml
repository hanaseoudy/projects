<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="Infinity" maxWidth="Infinity" minHeight="400.0" minWidth="600.0"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="view.middleware.frontend.JackarooController">

   <children>
      <!-- Background image that scales with the container -->
      <ImageView pickOnBounds="true">
         <Image url="@/images/Background.PNG"/>
      </ImageView>

      <!-- Content container -->
      <VBox alignment="CENTER" spacing="20">
         <children>
            <Label text="JACKAROO" textFill="#dde9eb">
               <font>
                  <Font name="Bauhaus 93" size="50.0" />
               </font>
               <effect>
                  <GaussianBlur radius="3.0" />
               </effect>
            </Label>

            <Button id="Play Button" mnemonicParsing="false" onMouseClicked="#playClick"
                    onMouseEntered="#playHover" onMouseExited="#playHoverExit"
                    prefHeight="58.0" prefWidth="92.0"
                    style="-fx-background-color: transparent; -fx-border-color: #FF69B4; -fx-border-width: 3px; -fx-border-radius: 5px; -fx-cursor: hand;"
                    text="PLAY" textFill="#ed469c">
               <font>
                  <Font name="Bauhaus 93" size="24.0" />
               </font>
               <effect>
                  <Glow level="0.8" />
               </effect>
            </Button>

            <Button id="Multiplayer Button" mnemonicParsing="false" onMouseClicked="#onMultiplayerClick"
                    onMouseEntered="#playHover" onMouseExited="#playHoverExit"
                    prefHeight="58.0" prefWidth="200"
                    style="-fx-background-color: transparent; -fx-border-color: #FF69B4; -fx-border-width: 3px; -fx-border-radius: 5px; -fx-cursor: hand;"
                    text="MULTIPLAYER" textFill="#ed469c">
               <font>
                  <Font name="Bauhaus 93" size="24.0" />
               </font>
               <effect>
                  <Glow level="0.8" />
               </effect>
            </Button>

            <Button id="Settings Button" mnemonicParsing="false" onMouseClicked="#settingsClick"
                    onMouseEntered="#settingsHover" onMouseExited="#settingsHoverExit"
                    prefHeight="51.0" prefWidth="145.0"
                    style="-fx-background-color: transparent; -fx-border-width: 3px; -fx-border-radius: 5px; -fx-border-color: #69cbf2;"
                    text="SETTINGS" textFill="#69cbf2">
               <font>
                  <Font name="Bauhaus 93" size="24.0" />
               </font>
               <effect>
                  <Glow level="0.73" />
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>